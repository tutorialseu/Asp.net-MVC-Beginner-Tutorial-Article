@model IEnumerable<Recipe>

<table>
    <tr>
        <th style="width:250px">Recipe Name</th>
        <th style="width:600px">Ingredients</th>
    </tr>

    @foreach (var recipe in Model)
    {
        <tr>
            <td>@recipe.Name</td>
            <td>@recipe.Ingredients</td>
            <td style="padding:46px">
                <a asp-action="Edit" asp-route-id="@recipe.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@recipe.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@recipe.ID">Delete</a>
            </td>
        </tr>
    }
</table>

<a asp-action="Add">Add a New Recipe</a>

